{
  "settings": {
    "analysis": {
      "analyzer": {
        "pinup-nori-analyzer": {
          "type": "custom",
          "tokenizer": "pinup-nori-tokenizer",
          "filter": [
            "lowercase",
            "stop",
            "trim",
            "nori_part_of_speech"
          ]
        },
        "pinup-ngram-analyzer": {
          "type": "custom",
          "tokenizer": "pinup-ngram-tokenizer",
          "filter": [
            "lowercase",
            "trim"
          ]
        }
      },
      "tokenizer": {
        "pinup-nori-tokenizer": {
          "type": "nori_tokenizer",
          "decompound_mode": "mixed"
        },
        "pinup-ngram-tokenizer": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 3,
          "token_chars": ["letter", "digit"]
        }
      }
    }
  }
}