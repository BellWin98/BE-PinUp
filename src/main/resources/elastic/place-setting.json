{
  "index": {
    "analysis": {
      "analyzer": {
        "korean": {
          "type": "custom",
          "tokenizer": "nori_tokenizer",
          "filter": [
            "nori_part_of_speech",
            "lowercase",
            "remove_duplicates"
          ]
        }
      },
      "tokenizer": {
        "nori_tokenizer": {
          "type": "nori_tokenizer",
          "decompound_mode": "mixed"
        }
      },
      "filter": {
        "nori_part_of_speech": {
          "type": "nori_part_of_speech",
          "stoptags": [
            "E", "IC", "J", "MAG", "MAJ", "MM", "SP", "SSC", "SSO", "SC", "SE",
            "XPN", "XSA", "XSN", "XSV", "UNA", "NA", "VSV"
          ]
        }
      }
    }
  },
  "number_of_shards": 1,
  "number_of_replicas": 1,
  "refresh_interval": "1s"
}